{
  "compileOnSave": true,
  "compilerOptions": {
    "baseUrl": "./",
    "importHelpers": true,
    "outDir": "./dist/out-tsc",
    "esModuleInterop": true,
    "sourceMap": true,
    "declaration": false,
    "module": "ESNext",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "ESNext",
    "paths": {
      "core-js/es7/reflect": ["node_modules/core-js/proposals/reflect-metadata"]
    },
    "typeRoots": ["node_modules/@types"],
    "lib": ["ESNext", "dom"]
  }
}
